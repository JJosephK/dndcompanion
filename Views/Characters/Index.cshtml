@using Microsoft.AspNetCore.Http
@using System.Reflection
@using dnd.Models.Characters
@using dnd.Models.Auth
@model List<Character>;
@{
    // Use these ViewBag values to change the header for the page
    ViewBag.Heading = "Dungeons and Dragons Companion: Final Project";
    ViewBag.SubHeading = "Existing Characters";
    Layout = "_Layout";
}
<!--Link that takes the user to the Create a Character action-->
<a asp-route-controller="Characters" asp-action="CreateCharacter" class="btn-link">
    <h6 style="text-align:center;">Create a New Character Sheet</h6>
</a>
<!--List of All Character Sheets-->
<table class="table table-bordered table-striped" style="text-align:center;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Race</th>
            <th>Level</th>
            <th>Alignment</th>
            <th>HP(Current/Temp)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Character character in Model.ToList())
        {
           
                <tr>
                <td>@character.CharacterName</td>
                <td>@character.CharacterClass</td>
                <td>@character.CharacterRace</td>
                <td>@character.CharacterLevel</td>
                <td>@character.Alignment</td>
                <td>@character.TemporaryHealth</td>
                <td>
                    <form asp-action="Detail" asp-route-id="@character.CharacterId">
                        <button type="submit" class="btn btn-primary">
                            View Full Character Sheet
                        </button>
                    </form>
                </td>
            </tr>
            
        }
    </tbody>
</table>
