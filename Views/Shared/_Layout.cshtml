@{
    ViewBag.Title = "Dungeons and Dragons Companion";
}
<!DOCTYPE html>
<html>
    <!--Head section-->
    <head>
        <!--Metadata-->
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <!--Enabling client-side libraries-->
        <!--JQuery-->
        <script src="~/lib/jquery/jquery.min.js"></script>
        <!--Bootstrap stylesheet-->
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <!--Popper.js-->
        <script src="~/lib/popper.js/popper.min.js"></script>
        <script src="~/lib/popper.js/popper.js"></script>
        <script src="~/lib/popper.js/popper-utils.js"></script>

        <!--Bootstrap scripts-->
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <!--JQuery Validate-->
        <script src="~/lib/jquery-validate/dist/jquery.validate.min.js"></script>
        <!--JQuery Validate unobtrusive-->
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js/jquery.validate.unobtrusive.min.js"></script>
    </head>

    <!--Body section | Beginning of visible page content-->
    <body class="container-fluid">
        <!--Navigation Menu/Bar becomes vertical on small screens-->
        <nav class="navbar fixed-top navbar-dark navbar-expand-sm bg-dark">
            <!--Brand-->
            <a class="navbar-brand" href="~/Home/Index/">D&D</a>
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Index/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Characters/">Characters</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Dice/">Dice</a>
                </li>
                <!--Dropdown-->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Assignments
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="~/Chapter7Assignment/Index/">Assignment 6.1</a>
                    </div>
                </li>
            </ul>
        </nav>
        <header class="text-center">
            <h1>@ViewBag.Heading</h1>
            <h2>@ViewBag.SubHeading</h2>
        </header>
        <div class="ml-5 mt-5">
            @RenderBody()
        </div>
    </body>
</html>