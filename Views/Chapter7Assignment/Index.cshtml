@using dnd.Models.Chapter7Assignment
@model Student
@{
    ViewBag.Title = "Assignment 6.1";
    ViewBag.Heading = "Assignment 6.1";
    ViewBag.SubHeading = "Student Grades Access";
    Layout = "_Layout";

    
}
<!DOCTYPE html>
<html>
    <!--Body section | Beginning of visible page content-->
    <body>
        <br />
        <br />
        <div class="d-flex flex-column justify-content-center">
            <div asp-validation-summary="All" class="order-1">
                <p class="text-center">You do not have a sufficient access level to view this data.</p>
            </div>
            <br />
        <form asp-action="Index" method="post" class="align-self-center order-2 d-flex flex-column">
                <label asp-for="AccessLevel" class="order-1">Access Level: </label>
                <input type="number" id="acc" name="acc" class="order-2 mb-2" />
                <button class="btn btn-primary order-3" asp-action="List" type="submit">Confirm</button>
                <a asp-action="Index" class="btn btn-secondary order-4">Cancel</a>
        </form>
        </div>
</body>
</html>
