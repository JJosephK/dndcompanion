@using dnd.Models.Session
@model User
@{
    ViewBag.Title = "Dungeons and Dragons Companion";
    ViewBag.Heading = "Dungeons and Dragons Companion: Final Project";
    ViewBag.SubHeading = "Home Page";
    Layout = "_Layout";
}
<h6>Have an Account? Sign In:</h6>
<!--Form for Signing in With an Existing User Profile-->
<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Username: </label>
        <input class="form-control" asp-for="Username" />
    </div>
    <div class="form-group">
        <label>Password: </label>
        <input type="password" class="form-control" asp-for="Password" />
    </div>
    <button type="submit" class="btn btn-primary">
        Submit
    </button>
    <a asp-action="Index" asp-route-id="" class="btn btn-secondary">Clear</a>
</form>
<!--Link to the CreateUser View-->
<a asp-action="CreateUser">Click Here to Create a User Profile</a>
