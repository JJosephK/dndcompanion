@using dnd.Models.Characters
@model Character
@{
    ViewBag.Title = "Dungeons and Dragons Companion";
    ViewBag.Heading = "Dungeons and Dragons Companion: Final Project";
    ViewBag.SubHeading = "Character Sheet Creation";
    Layout = "_Layout";
}
<h6>Follow Along To Create Your Character. </h6>
<!--TODO Error Validation Summary-->
